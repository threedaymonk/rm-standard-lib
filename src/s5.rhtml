<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" 
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">

<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <% presentation_date = Time.parse(metadata.presented) %>
  <title><%= metadata.title.h %></title>
  <!-- metadata -->
  <meta name="generator" content="S5" />
  <meta name="version" content="S5 1.1" />
  <meta name="presdate" content="<%= presentation_date.strftime('%Y%m%d').h %>" />
  <meta name="author" content="<%= metadata.author.h %>" />
  <meta name="company" content="<%= metadata.company.h %>" />
  <!-- configuration parameters -->
  <meta name="defaultView" content="slideshow" />
  <meta name="controlVis" content="hidden" />
  <!-- style sheet links -->
  <link rel="stylesheet" href="ui/default/slides.css" type="text/css" media="projection" id="slideProj" />
  <link rel="stylesheet" href="ui/default/outline.css" type="text/css" media="screen" id="outlineStyle" />
  <link rel="stylesheet" href="ui/default/print.css" type="text/css" media="print" id="slidePrint" />
  <link rel="stylesheet" href="ui/default/opera.css" type="text/css" media="projection" id="operaFix" />
  <!-- S5 JS -->
  <script src="ui/default/slides.js" type="text/javascript"></script>
</head>
<body>

<div class="layout">
  <div id="controls"><!-- DO NOT EDIT --></div>
  <div id="currentSlide"><!-- DO NOT EDIT --></div>
  <div id="header"></div>
  <div id="footer">
    <h1><%= metadata.event.h %>, <%= presentation_date.pretty.h %></h1>
    <h2><%= metadata.title.h %></h2>
  </div>
</div>

<div class="presentation">
  <% slides.each do |slide| %>
    <div class="slide">
      <div class="content">
        <%= slide.content %>
      </div>
      <% if slide.handout %>
        <div class="handout">
          <%= slide.handout %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

</body>
</html>
